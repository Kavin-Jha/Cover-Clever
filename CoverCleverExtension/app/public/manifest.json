{
  "manifest_version": 3,
  "name": "Cover Clever",
  "description": "Cover Clever. Because insurance should empower, not overwhelm.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "192": "icons/icon192.png",
    "512": "icons/icon512.png"
  },
  "permissions": ["activeTab", "scripting", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "./src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "192": "icons/icon192.png",
      "512": "icons/icon512.png"
    },
    "default_width": 500,
    "default_height": 700
  },
  "host_permissions": [
    "https://member.bluecrossma.com/*",
    "http://localhost:8000/*"
  ]
}

